{
  "projects": [
      {
          "name": "前端项目",
          "path": "/path/to/frontend",
          "type": "nodejs",
          "gitRepo": "git@github.com:your/frontend.git",
          "gitBranch": "main",
          "buildCmd": "npm install",
          "startCmd": "pm2 restart frontend",
          "healthCheck": {
              "url": "http://localhost:3000/health",
              "timeout": 30
          }
      },
      {
          "name": "后端API",
          "path": "/var/www/test",
          "type": "nodejs",
          "gitRepo": "git@jihulab.com:catnote/note-server.git",
          "gitBranch": "master",
          "buildCmd": "npm install",
          "startCmd": "npm run restart",
          "healthCheck": {
              "url": "http://localhost:8080/health",
              "timeout": 30
          }
      }
  ]
}